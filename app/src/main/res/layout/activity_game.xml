<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="16dp">

    <TextView
        android:id="@+id/budget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:text="Budget: $1000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/race_track"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/budget_text"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <!-- Race Car 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <CheckBox
                android:id="@+id/bet_car_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <SeekBar
                android:id="@+id/car_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bet_amount_car_1"
                android:layout_toEndOf="@id/bet_car_1"
                android:max="100"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_drawable"
                android:thumb="@drawable/ic_car1_thumb" />

            <EditText
                android:id="@+id/bet_amount_car_1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="#DC4A6C"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="10dp" />
        </RelativeLayout>

        <!-- Race Car 2 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <CheckBox
                android:id="@+id/bet_car_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <SeekBar
                android:id="@+id/car_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bet_amount_car_2"
                android:layout_toEndOf="@id/bet_car_2"
                android:max="100"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_drawable"
                android:thumb="@drawable/ic_car2_thumb" />
            <EditText

                android:id="@+id/bet_amount_car_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="#7C8BE6"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="10dp" />
        </RelativeLayout>

        <!-- Race Car 3 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <CheckBox
                android:id="@+id/bet_car_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <SeekBar
                android:id="@+id/car_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bet_amount_car_3"
                android:layout_toEndOf="@id/bet_car_3"

                android:max="100"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_drawable"
                android:thumb="@drawable/ic_car3_thumb" />

            <EditText
                android:id="@+id/bet_amount_car_3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="#21EA29"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="10dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/race_track"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg_2"
            android:text="Start" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg_2"
            android:layout_marginStart="16dp"
            android:text="Reset" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="341dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/logo_duaxe" />

<!--    <Button-->
<!--        android:id="@+id/logOut"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
